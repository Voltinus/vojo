%header.main-header
  .main-header__container
    = link_to :root, class: 'main-header__logo' do
      = image_tag 'logo.png', height: 40

    .main-header__alert-notice-container
      .main-header__alert
        = alert
      .main-header__notice
        = notice

    .main-header__links
      = link_to t("header.articles"), "/articles"
      = link_to t("header.forum"), "/forum"
      - if current_user.nil?
        = link_to t("header.login"), "/users/sign_in"
      - else
        = link_to t("header.account"), path_for_user_profile(current_user)
      = link_to t("header.users"), users_path()
      .main-header__dropdown
        .main-header__dropdown-button
          = t "header.lang"
        .main-header__dropdown-content
          = link_to "Polski", { locale: "pl" }
          = link_to "English", { locale: "en" }
          = link_to "Esperanto", { locale: "eo" }
.main-header-spacer
